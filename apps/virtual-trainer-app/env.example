# Основные настройки приложения
APP_NAME=Virtual Trainer
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here

# База данных
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/virtual_trainer
DATABASE_TEST_URL=postgresql+asyncpg://username:password@localhost:5432/virtual_trainer_test

# Redis для кэширования
REDIS_URL=redis://localhost:6379/0

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1500

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# JWT настройки
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Email настройки
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Push уведомления (Firebase)
FCM_SERVER_KEY=your-fcm-server-key

# Файловое хранилище
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Логирование
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Celery для фоновых задач
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Настройки безопасности
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]
RATE_LIMIT_PER_MINUTE=60

# Локализация
DEFAULT_LOCALE=ru
SUPPORTED_LOCALES=["ru", "kk", "en"] 